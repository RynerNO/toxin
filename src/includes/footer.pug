                        a(href="#" title="Услуги") Услуги
            div.footer__nav
                h3 О нас
                ul
                    li 
                        a(href="#" title="O сервисе") О сервисе
                    li 
                        a(href="#" title="Наша команда") Наша команда
                    li 
                        a(href="#" title="Вакансии") Вакансии
                    li 
                        a(href="#" title="Инвесторы") Инвесторы
            div.footer__nav
                h3 Служба поддержки
                ul
                    li 
                        a(href="#" title="Соглашения") Соглашения
                    li 
                        a(href="#" title="Сообщества") Сообщества
                    li 
                        a(href="#" title="Связь с нами") Связь с нами
